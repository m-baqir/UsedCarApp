@model UsedCarApp.Models.ViewModels.UpdateAd
@{
    ViewBag.Title = "Edit";
}

<h2>Update Ad</h2>
<form action="/Ad/Update/@Model.SelectedAd.AdId" method="POST">
    <div>
        <label>AdId:</label> <input type="number" name="AdId" value="@Model.SelectedAd.AdId"/>
    </div>
    <div>
        <label>Price:</label> <input type="number" name="Price" value="@Model.SelectedAd.Price" />
    </div>
    <div>
        <label>Car ID:</label> <input type="number" name="CarId" value="@Model.SelectedAd.CarId"/>
        <label>User ID:</label> <input type="number" name="UserId" value="@Model.SelectedAd.UserId"/>
    </div>
    
    <div>
        <label>Images:</label> <input type="text" name="Images" value="@Model.SelectedAd.Images" />
    </div>
    <div>
        <label>Description:</label> <input type="text" name="Description" value="@Model.SelectedAd.Description" />
    </div>
    <div>
        <input type="submit" value="Update Ad" />
    </div>
</form>

